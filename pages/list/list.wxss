/* pages/list/list.wxss */
.app{
  width: 100%;
  height: 100%;
  position: relative
}
.list{
  width: 200rpx;
  height: 80rpx;
  background: #f66;
  text-align: center;
  line-height: 80rpx;
  margin: 4rpx 0;
}
.active{
  width: 200rpx;
  height: 80rpx;
  background: rgb(240, 239, 239);
}
.list-r{
  display: flex;
  width: 270px;
  height: 100%;
  background: #fff;
  position: absolute;
  left: 200rpx;
  top: 0;
  /* flex-wrap: wrap;
  justify-content: space-around; */
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.ul-li{
  width: 240rpx;
  height: 300rpx;
}
.image{
  width: 240rpx;
  height: 240rpx;
}